@page
@model MyApp.Namespace.CreateRoomModel
@{
    ViewData["Title"] = "Create Rooms";
}



<h1>Create Room</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="NewRoom.RoomName"></label>
        <input asp-for="NewRoom.RoomName" class="form-control" required/>
        <span asp-validation-for="NewRoom.RoomName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NewRoom.Capacity"></label>
        <input asp-for="NewRoom.Capacity" class="form-control" type = "number" min = "1" />
        <span asp-validation-for="NewRoom.Capacity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-info">Create</button>
</form>


<a asp-page="/DisplayRoom">Display Rooms</a>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}