@page
@model MyApp.Namespace.DisplayRoomModel
@{
    ViewData["Title"] = "Display Rooms";
}


<h1>Display Rooms</h1>

@if (Model.NewRoomList != null && Model.NewRoomList.Any())
{
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Create Rooms
            <form id="addRoomForm" method="get" action="/CreateRoom">
                <button type="submit" class="btn btn-sm btn-primary">Add Room</button>
            </form>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Room ID</th>
                        <th>Room Name</th>
                        <th>Capacity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.NewRoomList)
                    {
                        <tr>
                            <td>@room.Id</td>
                            <td>@room.RoomName</td>
                            <td>@room.Capacity</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <p>No rooms available.</p>
}