@page
@model FitnessChallengeApp.Pages.Challenges.CreateModel
@{
    ViewData["Title"] = "Create Challenge";
}

<h2>Create Challenge</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Challenge.Category"></label>
        <select asp-for="Challenge.Category" class="form-control">
            <option value="">Select Category</option>
            <option value="Steps">Steps</option>
            <option value="Squats">Squats</option>
            <option value="Cardio">Cardio</option>
            <option value="Weight Loss">Weight Loss</option>
        </select>
        <span asp-validation-for="Challenge.Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Period"></label>
        <select asp-for="Challenge.Period" class="form-control">
            <option value="">Select Period</option>
            <option value="1 Week">1 Week</option>
            <option value="2 Weeks">2 Weeks</option>
            <option value="1 Month">1 Month</option>
            <option value="3 Months">3 Months</option>
        </select>
        <span asp-validation-for="Challenge.Period" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.DifficultyLevel"></label>
        <select asp-for="Challenge.DifficultyLevel" class="form-control">
            <option value="">Select Difficulty Level</option>
            <option value="Easy">Easy</option>
            <option value="Medium">Medium</option>
            <option value="Hard">Hard</option>
        </select>
        <span asp-validation-for="Challenge.DifficultyLevel" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Challenge.Instructions"></label>
        <textarea asp-for="Challenge.Instructions" class="form-control"></textarea>
        <span asp-validation-for="Challenge.Instructions" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create Challenge</button>
</form>
