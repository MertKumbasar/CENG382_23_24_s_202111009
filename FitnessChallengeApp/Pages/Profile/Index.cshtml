@page
@model FitnessChallengeApp.Pages.Profile.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h2>Profile</h2>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="ProfilePicture">Profile Picture</label>
        <input type="file" asp-for="ProfilePicture" class="form-control" />
        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Bio">Bio</label>
        <textarea asp-for="Bio" class="form-control"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>

@if (Model.CurrentUser.ProfilePicture != null)
{
    <div class="profile-picture">
        <img src="data:image;base64,@Convert.ToBase64String(Model.CurrentUser.ProfilePicture)" alt="Profile Picture" class="profile-img"/>
    </div>
}

<style>
    .profile-picture {
        margin-top: 20px;
    }
    .profile-img {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
    }
</style>
